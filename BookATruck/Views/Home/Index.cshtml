<div ng-app="app">
    <div class="container">

        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#/">
                        Hire A Truck
                        <img src="~/Content/images/redtruck.jpg" class="logo pull-left"/>
                    </a>
                </div>
                <div class="navbar-collapse collapse" ng-controller="navController">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="#/postTruck">Post a Route </a>
                        </li>
                        <li class="pull-right" ng-show="loggedIn == false">
                            <a href="" ng-click="FacebookLogin()">
                                <img src="~/Content/images/logo_facebook.png" class="login-image"/>

                            </a>
                        </li>
                        <li class="pull-right" ng-show="loggedIn == false">
                            <a href="" ng-click="GoogleLogin()">
                                <img src="~/Content/images/logo_google.png" class="login-image"/>
                            </a>
                        </li>
                        <li class="pull-right" ng-show="loggedIn == true">
                            <a href="" ng-click="Logout()">Logout</a>
                        </li>
                        <li class="pull-right">
                            <div id="google_translate_element"></div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            <div ng-view class="main-content">
            </div>
            <hr/>
            <footer>
                <div class="row">
                    <div class="col-xs-3">
                        <a href="http://www.redbus.in/AboutUs.aspx">About HireATruck</a>
                    </div>
                    <div class="col-xs-3">
                        <a href="http://www.redbus.in/FAQ.aspx">FAQ</a>
                    </div>
                    <div class="col-xs-3">
                        <a href="http://www.redbus.in/redBus_offers.aspx">Offers</a>
                    </div>
                    <div class="col-xs-3">
                        <a href="http://www.redbus.in/ContactUs.aspx">Contact Us</a>
                    </div>
                </div>
            </footer>
        </div>
    </div>
</div>

<script type="text/javascript">
    var loggedIn = @ViewBag.Loggedin;
    $('.body-content').on('click', function() {
        if ($('.navbar-collapse').attr('aria-expanded') === "true") {
            $(".navbar-toggle").trigger('click');
        }
    });
</script>
<script type="text/javascript">
    function googleTranslateElementInit() {
        new google.translate.TranslateElement({pageLanguage: 'en', includedLanguages: 'hi', layout: google.translate.TranslateElement.InlineLayout.SIMPLE}, 'google_translate_element');
    }
</script>
<script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>